mixin searchProduct(keyword)
    form(id='form-search')
        // Class to stick input with button
        .input-group 
            input(
                type="text"
                placeholder = "Nhập tên sản phẩm"
                name="keyword"
                class="form-control"
                value = keyword
                ) 
            .input-group-append
                button(
                class="btn btn-success"
                type="submit"
                ) Tìm kiếm